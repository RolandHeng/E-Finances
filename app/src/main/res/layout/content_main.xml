<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.e_finance.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/button"
        android:layout_width="263dp"
        android:layout_height="48dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="8dp"
        android:text="Time value of money"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button11"
        android:layout_width="263dp"
        android:layout_height="48dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="8dp"
        android:text="risk and return"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button9"
        android:layout_width="263dp"
        android:layout_height="48dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="56dp"
        android:onClick="getMessage"
        android:text="INterest rate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/interest_rate" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="126dp"
        android:layout_height="28dp"
        android:text="Lecture"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="126dp"
        android:layout_height="28dp"
        android:text="Calculator"
        android:layout_marginTop="74dp"
        app:layout_constraintTop_toBottomOf="@+id/button11"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button12"
        android:layout_width="258dp"
        android:layout_height="42dp"
        android:layout_marginTop="17dp"
        android:onClick="gocost"
        android:text="Monthly expenses"
        app:layout_constraintTop_toBottomOf="@+id/button13"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button13"
        android:layout_width="258dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:onClick="godebt"
        android:text="debt"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
